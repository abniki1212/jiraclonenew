@page
@model jiraclonenew.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<h1>Projects</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create Project</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Key</th>
            <th>Lead</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
@foreach (var project in Model.Projects)
{
        <tr>
            <td><a asp-page="Details" asp-route-id="@project.Id">@project.Name</a></td>
            <td>@project.Key</td>
            <td>@project.Lead?.Email</td>
            <td>@project.Status</td>
            <td>
                <a asp-page="Edit" asp-route-id="@project.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
